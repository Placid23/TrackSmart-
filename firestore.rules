
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function signedIn() {
      return request.auth != null;
    }

    // This helper reads the user's admin status.
    // It is critical that the document read here can be authorized
    // by a rule that DOES NOT call isAdmin() to avoid recursion.
    function isAdmin() {
      return signedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      
      // GET: Allow users to read their own document (allows isAdmin() to work)
      // OR allow admins to read any document.
      allow get: if signedIn() && (isOwner(userId) || isAdmin());

      // LIST: Only admins can list the entire users collection.
      // This is the specific permission required for the Admin Dashboard.
      allow list: if isAdmin();

      // CREATE: A user can create their own document.
      allow create: if signedIn() && isOwner(userId);

      // UPDATE: A user can update their own doc (but not the isAdmin field).
      // Admins can update any user's doc.
      allow update: if (signedIn() && isOwner(userId) && request.resource.data.isAdmin == resource.data.isAdmin) || isAdmin();

      // DELETE: Only admins can delete user documents.
      allow delete: if isAdmin();

      // Rules for user transactions (subcollection)
      match /transactions/{transactionId} {
        // Owner can read/write their own transactions. 
        // Admin can also read/write any user's transactions.
        allow read, write: if signedIn() && (isOwner(userId) || isAdmin());
      }
    }

    // Rule for the 'transactions' collection group query used by the admin dashboard.
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin();
    }
  }
}
