
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function signedIn() {
      return request.auth != null;
    }

    // This helper reads the user's admin status.
    // Base Case: We check the current user's document for isAdmin == true.
    function isAdmin() {
      return signedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      
      // CRITICAL: Allow users to read (get) their OWN document WITHOUT calling isAdmin().
      // This is the "base case" that prevents recursive loops in security rules.
      allow get: if signedIn() && request.auth.uid == userId;

      // Admins can read (get) any user's document.
      // Admins can list the entire collection.
      // We combine them into 'read' for clarity, but the 'get' above handles the owner case first.
      allow list, get: if isAdmin();

      // Users can create their own profile.
      allow create: if signedIn() && request.auth.uid == userId;

      // Users can update their own profile (preventing isAdmin change).
      // Admins can update any profile.
      allow update: if (signedIn() && request.auth.uid == userId && 
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin']))) || 
                    isAdmin();

      // Only admins can delete.
      allow delete: if isAdmin();

      // Rules for user transactions (subcollection)
      match /transactions/{transactionId} {
        // Owner can read/write their own transactions. 
        // Admin can also read/write any user's transactions.
        allow read, write: if signedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Rule for the 'transactions' collection group query used by the admin dashboard.
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin();
    }
  }
}
