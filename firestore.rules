
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function signedIn() {
      return request.auth != null;
    }

    // This helper reads the user's admin status.
    // We use get() to look up the user's own document.
    function isAdmin() {
      return signedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      
      // GET: Allow users to read their OWN document using a simple UID check.
      // This is the CRITICAL "base case" that allows isAdmin() to work without recursion.
      allow get: if signedIn() && request.auth.uid == userId;

      // LIST & GET: Allow admins to read or list ANY user document.
      // The 'list' permission is what the Admin Dashboard needs.
      allow list, get: if isAdmin();

      // CREATE: A user can create their own document.
      allow create: if signedIn() && request.auth.uid == userId;

      // UPDATE: A user can update their own doc (but not the isAdmin field).
      // Admins can update any user's doc.
      allow update: if (signedIn() && request.auth.uid == userId && 
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin']))) || 
                    isAdmin();

      // DELETE: Only admins can delete user documents.
      allow delete: if isAdmin();

      // Rules for user transactions (subcollection)
      match /transactions/{transactionId} {
        // Owner can read/write their own transactions. 
        // Admin can also read/write any user's transactions.
        allow read, write: if signedIn() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Rule for the 'transactions' collection group query used by the admin dashboard.
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin();
    }
  }
}
