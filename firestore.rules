
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function signedIn() {
      return request.auth != null;
    }

    // BREAKING RECURSION: 
    // This allows the isAdmin() function to fetch the user document
    // via a simple ownership check, avoiding a circular dependency.
    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return signedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      
      // BASE CASE: Allow users to read (get) their OWN document directly.
      // This is crucial for the isAdmin() function to work without recursion.
      allow get: if isOwner(userId);

      // Admins can list all users and get any specific user document.
      allow list, get: if isAdmin();

      // Users can create their own profile initially.
      allow create: if isOwner(userId);

      // Users can update their own profile, but NOT the 'isAdmin' field.
      // Admins can update any profile (e.g., to promote someone).
      allow update: if (isOwner(userId) && request.resource.data.isAdmin == resource.data.isAdmin) || 
                    isAdmin();

      // Only admins can delete user records.
      allow delete: if isAdmin();

      // Rules for user transactions subcollection
      match /transactions/{transactionId} {
        // Owner can read/write their own transactions. 
        // Admin can also access any user's transactions directly.
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Rule for the 'transactions' collection group query used by the admin dashboard.
    match /{path=**}/transactions/{transactionId} {
      allow read: if isAdmin();
    }
  }
}
